// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  image       String?
  createdAt   DateTime @default(now())
}